        <article class="well">
            <h3 class="txt-black">{{ oComicStrip.title }}</h3>

            <p>({{ oComicStrip.author }})</p>
            <a href="{{ path('beni_bdtheque_comicstrip_details',{'idComicStrip':oComicStrip.id}) }}"
