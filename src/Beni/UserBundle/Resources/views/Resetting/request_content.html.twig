{% extends "BeniBdthequeBundle::Default/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
        <div class="form_row row">
            <div class="col-xs-12 col-sm-3 col-sm-offset-3 col-md-3 col-md-offset-3 col-lg-3 col-lg-offset-3">
                <label for="username">Login</label>
            </div>
            <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                <input type="text" id="username" name="username" required="required"/>
            </div>
        </div>
        <div>
            <input type="submit" value="Changer de mot de passe" class="btn btn-primary"/>
        </div>
    </form>
{% endblock %}
