
{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST"
          class="fos_user_registration_register">
        <div class="form_row row">
            <div class="col-xs-12 col-sm-3 col-sm-offset-3 col-md-3 col-md-offset-3 col-lg-3 col-lg-offset-3">
                {{ form_label(form.email, 'Email') }}
            </div>
            <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                {{ form_errors(form.email) }}
                {{ form_widget(form.email) }}
            </div>
        </div>
        <div class="form_row row">
            <div class="col-xs-12 col-sm-3 col-sm-offset-3 col-md-3 col-md-offset-3 col-lg-3 col-lg-offset-3">
                {{ form_label(form.username, 'Login') }}
            </div>
            <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                {{ form_errors(form.username) }}
                {{ form_widget(form.username) }}
            </div>
        </div>
        <div class="form_row row">
            <div class="col-xs-12 col-sm-3 col-sm-offset-3 col-md-3 col-md-offset-3 col-lg-3 col-lg-offset-3">
                {{ form_label(form.plainPassword.first, 'Mot de passe') }}
            </div>
            <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                {{ form_errors(form.plainPassword.first) }}
                {{ form_widget(form.plainPassword.first) }}
            </div>
        </div>
        <div class="form_row row">
            <div class="col-xs-12 col-sm-3 col-sm-offset-3 col-md-3 col-md-offset-3 col-lg-3 col-lg-offset-3">
                {{ form_label(form.plainPassword.second, 'Confirmation') }}
            </div>
            <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                {{ form_errors(form.plainPassword.second) }}
                {{ form_widget(form.plainPassword.second) }}
            </div>
        </div>
        <div>
            <input type="submit" value="Enregistrer les informations" class="btn btn-primary"/>
        </div>
        {{ form_end(form) }}
    </form>
{% endblock %}
