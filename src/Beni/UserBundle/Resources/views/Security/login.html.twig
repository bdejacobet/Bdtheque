{% extends "BeniBdthequeBundle::Default/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    <h2 class="txt-white">Se loguer</h2>
    <div class="well">
        {% block fos_user_content %}
            {% if error %}
                <div>{{ error|trans }}</div>
            {% endif %}

            <form action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                <div class="form_row row">
                    <div class="col-xs-12 col-sm-3 col-sm-offset-3 col-md-3 col-md-offset-3 col-lg-3 col-lg-offset-3">
                        <label for="username">Login</label>
                    </div>
                    <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                        <input type="text" id="username" name="_username" value="{{ last_username }}"
                               required="required"/>
                    </div>
                </div>

                <div class="form_row row">
                    <div class="col-xs-12 col-sm-3 col-sm-offset-3 col-md-3 col-md-offset-3 col-lg-3 col-lg-offset-3">
                        <label for="password">Mot de passe</label>
                    </div>
                    <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                        <input type="password" id="password" name="_password" required="required"/>
                    </div>
                </div>

                <div class="form_row row">
                    <div class="col-xs-12 col-sm-3 col-sm-offset-3 col-md-3 col-md-offset-3 col-lg-3 col-lg-offset-3">
                        <label for="remember_me">Se souvenir de moi</label>
                    </div>
                    <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                    </div>
                </div>

                <input type="submit" id="_submit" name="_submit" value="Connexion" class="btn btn-primary"/>
            </form>
        {% endblock fos_user_content %}
    </div>
{% endblock %}
